<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    
    <style name="ll_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">@dimen/size_12dp</item>
        <item name="android:paddingTop">@dimen/size_12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/shape22_corner_selector</item>
    </style>

    <style name="lm_style">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:src">@mipmap/b</item>
        <item name="android:layout_marginLeft">@dimen/size_20dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <style name="tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">春风十里不如你</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/size_15dp</item>
        <item name="android:layout_marginLeft">@dimen/size_25dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>
